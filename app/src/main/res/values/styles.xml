<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/color_dark_blue</item>
        <item name="colorPrimary">@color/color_light_blue</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!-- Theme.AppCompat.Light is not a dialog theme -->
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/color_dark_blue</item>
        <item name="android:windowBackground">@drawable/date_picker_background</item>
    </style>



</resources>